def regression(n, xarr, yarr)
  x = 0.0
  y = 0.0
  xy = 0.0
  xx = 0.0
  yy = 0.0
  (n - 1).times do |i|
    x += xarr[i]
  end
  (n - 1).times do |i|
    y += yarr[i]
  end
  (n - 1).times do |i|
    xy += xarr[i] * yarr[i]
  end
  (n - 1).times do |i|
    xx += xarr[i] * xarr[i]
  end
  (n - 1).times do |i|
    yy += yarr[i] * yarr[i]
  end
  a = (n*xy - x*y) / (n*xx - x**2)
  b = (xx*y - xy*x) / (n*xx - x**2)
  printf("%.3f %.3f\n", a, b)
end
